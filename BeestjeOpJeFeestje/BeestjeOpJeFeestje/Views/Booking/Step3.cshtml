@model BeestjeOpJeFeestje.ViewModels.BookingViewModel

<div class="row justify-content-center">
    <div class="col-auto">
        <div class="step-bar">
            <div class="step">
                <span class="step-number">1</span>
                <span class="step-label">Beestjes</span>
            </div>
            <div class="step">
                <span class="step-number">2</span>
                <span class="step-label">Gegevens</span>
            </div>
            <div class="step active">
                <span class="step-number">3</span>
                <span class="step-label">Bevestig</span>
            </div>
        </div>
    </div>
</div>

<h4>Stap 3 - Bevestig boeking</h4>
<div class="d-flex">
    <div class="booking-container box">
        <h5>Contact gegevens:</h5>
        <p>Naam: @Model.Name</p>
        <p>E-mail: @Model.Email</p>
        <p>Adres: @Model.Street @Model.HouseNumber</p>
        <p>@Model.PostalCode @Model.City</p>

        <br />

        <h5>Prijs / Korting:</h5>
        @foreach(var animal in Model.SelectedAnimals) {
            <p>@animal.Name: €@animal.Price</p>
        }
        @foreach(var discount in Model.AppliedDiscounts) {
            <p>@discount</p>
        }
        <p><span class="fw-bold">Totaal: </span>€@Model.TotalPrice</p>

        <form asp-controller="Booking" asp-action="Confirm" method="POST">
            <button type="submit" class="btn btn-success">Bevestig boeking</button>
        </form>
    </div>
    <div class="info-container box">
        <p>Gekozen datum: @Model.SelectedDate</p>
        <p>Gekozen beestjes:</p>
        <div class="d-flex">
            @foreach(var animal in Model.SelectedAnimals) {
                <img src="@Url.Content(animal.ImagePath)" class="small-photo" />
            }
        </div>

    </div>
</div>