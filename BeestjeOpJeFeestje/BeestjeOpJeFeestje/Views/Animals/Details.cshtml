@model Models.Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Beestje</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImagePath)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImagePath)
        </dd>
        <dt class="col-sm-2">
            Afbeelding
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.ImagePath)" alt="Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AnimalType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AnimalType.TypeName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Bewerken</a> |
    <a asp-action="Index">Terug naar lijst</a>
</div>
